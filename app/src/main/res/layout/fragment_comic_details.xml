<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:tag="DetailsFragment"
    tools:context=".fragments.comicDetailsFragment.ComicDetailsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/marvel_comic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/source_sans_pro_extra_light"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="35sp"
                tools:text="test" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/marvel_image"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
android:transitionName="hero_image"
                    android:contentDescription="@string/image_view_description" />


            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/marvel_comic_page_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro_extra_light"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:text="test" />
            <View
                android:id="@+id/individual_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/marvel_comic_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro_extra_light"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:text="test" />


        </LinearLayout>






    </androidx.core.widget.NestedScrollView>
</LinearLayout>